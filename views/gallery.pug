extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/main.css")


block content 
    main
        if prjcts.length > 0
            .grid
                each project in prjcts
                    article.card.project-item
                        header.card__header
                            h1.project__title #{project.title}
                        div.card__image
                            img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" ,alt="Sample Project")
                        div.card__content
                            h2.project__price $19.99
                            p.project__description A very interesting book about so many even more interesting things!
                        .card__actions
                            button.btn Did you like it ? Send me a message
        else 
            h1 No Projects
